<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/sli">

    <LinearLayout
        android:id="@+id/textsplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/infotrack4"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <ProgressBar
        android:layout_width="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:id="@+id/progressbar"/>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="Please wait..."
        android:layout_below="@+id/progressbar"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:id="@+id/tvrandom"
        android:fontFamily="@font/nunito_semibold"/>



    <LinearLayout

        android:id="@+id/texthome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN AS"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            android:fontFamily="@font/nunito_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Are you a Faculty or a Student?"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:fontFamily="@font/nunito_semibold"/>

        <Button
            android:id="@+id/btnfaculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="20sp"
            android:text="FACULTY"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="-- OR --"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:fontFamily="@font/nunito_semibold"/>

        <Button
            android:id="@+id/btnstudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="20sp"
            android:text="STUDENT"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"/>

        <LinearLayout
            android:id="@+id/texts"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sponsored By"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/nunito_semibold"/>

            <ImageView
                android:id="@+id/imageVie"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/infotrack4"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                />

        </LinearLayout>



    </LinearLayout>







</RelativeLayout>