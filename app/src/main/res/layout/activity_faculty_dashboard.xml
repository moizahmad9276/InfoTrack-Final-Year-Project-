<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacultyDashboardActivity"
    android:background="@drawable/sli">

    <ScrollView
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/textfacdash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="6dp"
            android:gravity="left"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FACULTY DASHBOARD"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                android:fontFamily="@font/nunito_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Explore whatever you want to!"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:fontFamily="@font/nunito_semibold"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/menus"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="30dp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/bt"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/bluetooth"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Bluetooth"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/st"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/stt"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="My Status"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="30dp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/mp"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/prof"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="My Profile"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/um"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/unimaps"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="University Map"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="30dp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/au"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/ab"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="About"
                            android:textColor="@color/colorBlack"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/hc"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/hh"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Help Center"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="30dp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/cu"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/cont"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Contact Us"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/tc"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/serv"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Services"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="30dp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/te"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/team"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="InfoTrack Team"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/rt"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/rate"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Rate Our App"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="30dp"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/ta"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/play"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Take A Tour"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/lo"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:src="@drawable/out"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Log Out"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/nunito_semibold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:id="@+id/progressbar"/>

    <TextView
        android:layout_centerInParent="true"
        android:layout_below="@id/progressbar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please wait..."
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:id="@+id/tvrandom"
        android:fontFamily="@font/nunito_semibold"/>
</RelativeLayout>