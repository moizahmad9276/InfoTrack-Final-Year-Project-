<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TheirStatusActivity"
    android:background="@drawable/sli"
    >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/fs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FACULTY STATUS"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:fontFamily="@font/nunito_bold"/>

        <TextView
            android:id="@+id/det"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/fs"
            android:gravity="center"
            android:text="Don't go anywhere, just check the availability of every faculty member here!"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:fontFamily="@font/nunito_semibold"/>


    <android.support.v7.widget.RecyclerView
        android:padding="16dp"
        android:layout_below="@+id/det"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/facultylist_recyclerview">

    </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</RelativeLayout>